<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:weightSum="0.5"
    >


    <LinearLayout
        android:layout_width="440px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>



    <ImageView
        android:layout_width="201dp"
        android:layout_height="106dp"
        android:src="@drawable/logo"
        android:id="@+id/imageView4"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="100dp"
        android:layout_x="74dp"
        android:layout_y="74dp" />

    <TextView
        android:text="BookQuest"
        android:fontFamily="cursive"
        android:layout_width="153dp"
        android:layout_height="36dp"
        android:layout_x="113dp"
        android:layout_y="97dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:id="@+id/loginbtn"
        android:background="?attr/colorAccent"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Login"
        android:layout_x="91dp"
        android:layout_y="350dp"
        android:textSize="20sp" />

    <EditText
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/email"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-30dp"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:layout_x="91dp"
        android:layout_y="255dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="175dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="******"
        android:textColorHint="@android:color/background_light"
        android:layout_x="91dp"
        android:layout_y="296dp"
        android:textSize="20sp" />

    <Button
        android:layout_width="159dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:id="@+id/register"
        android:drawable="?android:attr/textColorTertiary"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Register Here"
        android:layout_x="102dp"
        android:layout_y="394dp"
        android:background="@android:color/transparent"
        android:textSize="17sp" />

    <Button
        android:layout_width="146dp"
        android:layout_height="24dp"
        android:id="@+id/forgotpass"
        android:drawable="?android:attr/textColorTertiary"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Forgot Password?"
        android:layout_x="108dp"
        android:layout_y="429dp"
        android:background="@android:color/transparent" />

</AbsoluteLayout>
