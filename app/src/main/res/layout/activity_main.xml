<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/back"
            android:elevation="4dp"
            />

    </android.support.design.widget.AppBarLayout>

    <Button
        android:layout_width="138dp"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_height="80px"
        android:id="@+id/logout"
        android:background="@drawable/btn_blue_back"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Logout"
        android:layout_x="205dp"
        android:layout_y="76dp" />

    <Button
        android:layout_width="146dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:layout_height="80px"
        android:id="@+id/chgbtn"
        android:background="@drawable/btn_back"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Change Password"
        android:layout_x="25dp"
        android:layout_y="75dp" />

    <Button
        android:text="Add"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="80dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_x="57dp"
        android:layout_y="174dp" />

    <Button
        android:text="Display"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="80dp"
       style="@style/Widget.AppCompat.Button.Colored"
        android:layout_x="55dp"
        android:layout_y="305dp" />

    <include layout="@layout/content_main"
        android:layout_x="110dp"
        android:layout_y="132dp"
        android:layout_width="wrap_content"
        android:layout_height="247dp" />

    <Button
        android:text="Delete"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_x="55dp"
        android:layout_y="241dp" />

    <Button
        android:text="Update"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="80dp"
        style="@style/Widget.AppCompat.Button.Colored"

        android:layout_x="54dp"
        android:layout_y="372dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_x="287dp"
        android:layout_y="515dp" />

</AbsoluteLayout>
